<div class="schedule-container">
  <div id="schedule_form">
    <table>
      <tr>
        <th>Title</th>
        <th>GM</th>
        <th>Location</th>
        <th>Start Time</th>
        <th>End Time</th>
        <% if session[:user_name] == "admin" %>
          <th>Admin Controls</th>
        <% end %>
      </tr>
      <% @schedule_info.each do |s| %>
        <tr>
          <td class="title"><%= s[:title] %></td>
          <td><%= s[:staff_member] %></td>
          <td><%= s[:location] %></td>
          <td class="timestamp"><%= s[:start] %></td>
          <td class="timestamp"><%= s[:end] %></td>
          <% if session[:user_name] == "admin" %>
            <td>
              <%= link_to "Edit", edit_schedule_path(s), method: :get %>
              <%= link_to 'Delete', schedule_path(s), method: :delete, data: { confirm: "Are you sure?" } %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </table>
    <br><br>
    <% if session[:user_name] == "admin" %>
      <%= button_to "Add to Schedule", new_schedule_path, method: :get %>
    <% end %>
  </div>
</div>