<header class="header" id="main_header">
  <%= image_tag "PAW-Logo.jpg", id: "menu_img" %>
  <div id="program">
    Play and Win
  </div>
  <nav id="pages">
    <%= link_to "Add Participant", new_participant_path %>
    <%= link_to "Add Game Log", new_game_log_path %>
    <%= link_to "Library", game_library_index_path %>
  </nav>
  <nav id="default">
    <ul class="top-level-menu">
    <li>
      <%= link_to "Home", root_path %>
    </li>
    <li>
      <% if session[:user_id] != nil %>
        <%= link_to "Logout", logout_path, method: :delete %>
      <% else %>
        <%= link_to "Login", login_path %>
      <% end %>
    </li>
    <li>
      <a href="#">Admin</a>
      <ul class="second-level-menu">
        <li>
          <a href="#">Staff</a>
          <ul class="third-level-menu">
            <li><%= link_to "PAW Staff", paw_staffs_path %></li>
            <li><%= link_to "Con Staff", con_staffs_path %></li>
          </ul>
        </li>
        <li><%= link_to "Inventory", inventories_path %></li>
        <li><%= link_to "Event Schedule", schedules_path %></li>
        <li><%= link_to "Game Logs", game_logs_path %></li>
        <li><%= link_to "Participants", participants_path %></li>
        <% if session[:user_name] == 'admin' %>
          <li><a href="#">Library Logs</a></li>
          <li><%= link_to "Event Information", events_path %></li>
          <li><%= link_to "Winner Circle", winner_circle_index_path %></li>
        <% end %>
      </ul>
    </li>
    </ul>
  </nav>
  <div id="event_code">
    Event: <%= @event_info[0]["event_code"] %>
  </div>
  <div id="user_info">
    <% if session[:user_id] != nil %>
      <%= "User: #{session[:user_name]}" %>
    <% else %>
      <%= "You are not currently logged in." %>
    <% end %>
  </div>
</header>