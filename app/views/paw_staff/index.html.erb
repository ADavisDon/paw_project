<%= render "shared/header" %>

<br>
<table>
  <tr>
    <th>Name</th>
    <th>Badge</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Title</th>
    <th>Role</th>
    <th></th>
  </tr>
  <% @staff.each do |s| %>
    <tr>
      <td><%= s[:name] %> </td>
      <td><%= s[:badge] %></td>
      <td><%= s[:phone] ||= "NA" %></td>
      <td><%= s[:email] ||= "NA" %></td>
      <td><%= s[:title] ||= "NA" %></td>
      <td><%= s[:role] ||= "NA" %></td>
      <td>
        <%= link_to 'Edit', edit_paw_staff_path(s), method: :get %>
        <%= link_to 'Delete' %>
      </td>
    </tr>
  <% end %>
</table>
<br>

<button>Add staff</button>